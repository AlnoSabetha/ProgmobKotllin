<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_drone"
        android:layout_width="80dp"
        android:layout_height="81dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="172dp"
        android:text="Drone View"
        android:textSize="10dp"
        android:drawableTop="@drawable/drone"
        app:layout_constraintBottom_toTopOf="@+id/text_home"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_mapic"
        android:layout_width="80dp"
        android:layout_height="81dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="172dp"
        android:text="lahan by GPS"
        android:textSize="10dp"
        android:drawableTop="@drawable/mapic"
        app:layout_constraintBottom_toTopOf="@+id/text_home"
        app:layout_constraintEnd_toStartOf="@+id/btn_mapker" />

    <Button
        android:id="@+id/btn_mapker"
        android:layout_width="80dp"
        android:layout_height="81dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="172dp"
        android:text="Lahan by Map"
        android:textSize="10dp"
        android:drawableTop="@drawable/mapker"
        android:theme="@style/buttonStyle1"
        app:layout_constraintBottom_toTopOf="@+id/text_home"
        app:layout_constraintEnd_toStartOf="@+id/btn_farmic" />

    <Button
        android:id="@+id/btn_farmic"
        android:layout_width="80dp"
        android:layout_height="81dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="172dp"
        android:text="Input Petani"
        android:textSize="10dp"
        android:drawableTop="@drawable/farmic"
        app:layout_constraintBottom_toTopOf="@+id/text_home"
        app:layout_constraintEnd_toStartOf="@+id/btn_drone" />

</androidx.constraintlayout.widget.ConstraintLayout>